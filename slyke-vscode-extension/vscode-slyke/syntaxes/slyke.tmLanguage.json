{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Slyke",
  "scopeName": "source.slyke",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#statements"
    },
    {
      "include": "#tags"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.slyke",
      "match": "#.*$"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.slyke",
          "match": "\\b(if|while|for|return|component)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.slyke",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.slyke",
          "match": "\\\\."
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "name": "keyword.other.slyke",
          "match": "\\b(message|popUp)\\b"
        },
        {
          "begin": "(message|popUp)\\s+\"",
          "beginCaptures": {
            "1": { "name": "keyword.other.slyke" }
          },
          "end": "\"",
          "name": "string.statement.slyke",
          "patterns": [
            {
              "name": "constant.character.escape.slyke",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "begin": "(<)(echo|button|template|Variable|Display|Box)(\\b|\\s*|\\/?>)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.slyke" },
            "2": { "name": "entity.name.tag.slyke" }
          },
          "end": "(\\s*\\/?>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.slyke" }
          },
          "name": "meta.tag.slyke",
          "patterns": [
            {
              "include": "#tag-attributes"
            }
          ]
        },
        {
          "begin": "(</)(echo|button|template|Variable|Display|Box)(>)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.slyke" },
            "2": { "name": "entity.name.tag.slyke" },
            "3": { "name": "punctuation.definition.tag.end.slyke" }
          },
          "end": "(?=>)",
          "name": "meta.tag.slyke"
        }
      ]
    },
    "tag-attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.slyke",
          "match": "\\b(message|text|onClick|popUp|name|value)\\b(?==)"
        },
        {
          "name": "string.quoted.attribute.slyke",
          "begin": "(?<==)\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.slyke",
              "match": "\\\\."
            },
            {
              "begin": "\\{",
              "end": "\\}",
              "name": "variable.other.interpolation.slyke",
              "patterns": [
                {
                  "name": "variable.name.slyke",
                  "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
